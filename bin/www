#!/usr/bin/env node
var debug = require('debug')('Trackr');
var app = require('../app');

app.set('port', process.env.OPENSHIFT_NODEJS_PORT || 8080);
app.set('ip_address', process.env.OPENSHIFT_NODEJS_IP || '127.0.0.1');

var server = app.listen(app.get('port'),app.get('ip_address'), function() {
  debug('Express server listening on ' + server.address().port + ', ' server.address());
});
